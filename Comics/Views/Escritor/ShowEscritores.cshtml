
@{
    ViewBag.Title = "Escritores";
}

<h2>Escritores</h2>

<div ng-controller="EscritoresController">
    <table cellpadding="4" cellspacing="4" width="90%" align="center"
           style="background-color: skyblue; border:solid 2px red; padding-top:20px;">
        <thead>
            <tr style="background-color:#F5F5F5;">
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Nacimiento</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="escritor in escritoresInfo">
                <td>{{escritor.id}}</td>
                <td>{{escritor.nombre}}</td>
                <td>{{escritor.apellido}}</td>
                <td>{{escritor.nacimiento}}</td>
                <td><a ng-click="EditEscritor(escritor.id)">Edit</a></td>
                <td><a ng-click="EliminarEscritor(escritor.id)">Delete</a></td>
            </tr>
        </tbody>
    </table>
    <div data-ng-include="'/Scripts/managment/shared/pagination/pagination.html'"></div>
</div>


